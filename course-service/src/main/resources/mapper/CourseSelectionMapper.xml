<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campus.course.mapper.CourseSelectionMapper">
    <resultMap id="CourseSelectionResultMap" type="com.campus.course.entity.CourseSelection">
        <id property="id" column="id"/>
        <result property="studentId" column="student_id"/>
        <result property="courseId" column="course_id"/>
        <result property="selectedAt" column="selected_at"/>
        <result property="courseCode" column="course_code"/>
        <result property="courseName" column="course_name"/>
        <result property="credit" column="credit"/>
        <result property="schedule" column="schedule"/>
    </resultMap>

    <select id="selectByStudentId" resultMap="CourseSelectionResultMap">
        SELECT cs.*, c.course_code, c.course_name, c.credit, c.schedule
        FROM course_selection cs
        LEFT JOIN course c ON cs.course_id = c.id
        WHERE cs.student_id = #{studentId}
    </select>

    <select id="selectById" resultMap="CourseSelectionResultMap">
        SELECT * FROM course_selection WHERE id = #{id}
    </select>

    <select id="selectByCourseId" resultMap="CourseSelectionResultMap">
        SELECT * FROM course_selection WHERE course_id = #{courseId}
    </select>

    <insert id="insertSelection" parameterType="com.campus.course.entity.CourseSelection">
        INSERT INTO course_selection (student_id, course_id, selected_at)
        VALUES (#{studentId}, #{courseId}, NOW())
    </insert>

    <delete id="deleteSelection">
        DELETE FROM course_selection WHERE student_id = #{studentId} AND course_id = #{courseId}
    </delete>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM course_selection
    </select>
</mapper> 