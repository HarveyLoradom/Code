<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campus.score.mapper.ScoreMapper">
    <resultMap id="ScoreResultMap" type="com.campus.score.entity.Score">
        <id property="id" column="id"/>
        <result property="studentId" column="student_id"/>
        <result property="courseId" column="course_id"/>
        <result property="score" column="score"/>
        <result property="gradedAt" column="graded_at"/>
    </resultMap>

    <select id="selectAll" resultMap="ScoreResultMap">
        SELECT * FROM score ORDER BY id DESC
    </select>

    <select id="selectById" resultMap="ScoreResultMap">
        SELECT * FROM score WHERE id = #{id}
    </select>

    <select id="selectByStudentId" resultMap="ScoreResultMap">
        SELECT * FROM score WHERE student_id = #{studentId}
    </select>

    <select id="selectByCourseId" resultMap="ScoreResultMap">
        SELECT * FROM score WHERE course_id = #{courseId}
    </select>

    <insert id="insertScore" parameterType="com.campus.score.entity.Score">
        INSERT INTO score (student_id, course_id, score, graded_at)
        VALUES (#{studentId}, #{courseId}, #{score}, NOW())
    </insert>

    <update id="updateScore" parameterType="com.campus.score.entity.Score">
        UPDATE score
        SET student_id = #{studentId}, course_id = #{courseId}, score = #{score}, graded_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteScore">
        DELETE FROM score WHERE id = #{id}
    </delete>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM score
    </select>
</mapper> 